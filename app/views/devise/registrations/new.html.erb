<div class="login-container">
  <h2><%= t('devise.registrations.new.sign_up') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'new_user form-login'}) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group row">
      <div class="col-sm-4">
        <%= f.label :email, class: 'control-label' %>
      </div>
      <div class="col-sm-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group row">
      <div class="col-sm-4">
        <%= f.label :password, class: 'control-label' %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control login-password' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上を入力してください。)</em>
        <% end %>
      </div>
    </div>

    <div class="field form-group row">
      <div class="col-sm-4">
        <%= f.label :password_confirmation %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control login-password' %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit t('devise.registrations.new.sign_up'), class: 'btn btn-lg btn-primary btn-block btn-login' %>
    </div>
  <% end %>

  <div class="links">
    <%= render "devise/shared/links" %>
  </div>
</div>
