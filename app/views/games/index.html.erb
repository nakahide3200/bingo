<p id="notice"><%= notice %></p>

<h1>ゲーム一覧</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>名前</th>
      <th>開始時刻</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td width="250px"><%= game.start_time %></td>

        <td width="150px"><%= link_to '参加する', new_game_entry_path(game), {:class => 'btn btn-primary'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>


