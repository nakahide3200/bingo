<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @game.name %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @game.start_time %>
</p>

<table>
  <thead>
    <tr>
      <th>B</th>
      <th>I</th>
      <th>N</th>
      <th>G</th>
      <th>O</th>
    </tr>
  </thead>

  <tbody>
    <% @numbers.each do |row| %>
      <tr>
        <% row.each do |number| %>
          <td><%= number %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'ゲーム一覧へ', games_path %>
