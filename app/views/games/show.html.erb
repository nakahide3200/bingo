<p id="notice"><%= notice %></p>

<h1 class="game-title"><%= @game.name %></h1>

<p>
  <strong>開始時刻:</strong>
  <%= @game.start_time %>
</p>


<% if @bingo %>
  <div class="bingo-img">
    <%= image_tag 'bingo.png' %>
  </div>
<% else %>
  <div class="last-number">
    <%= @game.numbers.last %>
  </div>
<% end %>

<table class="card-table table-bordered center-block">
  <thead>
    <tr>
      <th>B</th>
      <th>I</th>
      <th>N</th>
      <th>G</th>
      <th>O</th>
    </tr>
  </thead>

  <tbody>
    <% @numbers.each do |row| %>
      <tr>
        <% row.each do |number| %>
          <td data-number="<%= number %>"><%= number %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <div>抽選番号</div>
  <div><%= @game.numbers.join(', ') %></div>
</p>

<%= link_to 'ゲーム一覧へ', games_path %>

<input id="lot_numbers_json" type="hidden" value=<%= @lot_numbers_json %> />
<script type="text/javascript">
  $(function(){
    App.notifications = App.cable.subscriptions.create(
      {  
        channel: "NotificationsChannel", 
        game_id: <%= @game.id %>
      },
      {
        received: function(data) {
          location.reload();
        }
      }
    );

    // ヒットしている番号の印表示。
    var lot_numbers_json = $('#lot_numbers_json').val();
    var lot_numbers = JSON.parse(lot_numbers_json);

    $('.card-table tr td').each(function(index, elm){
      var number = $(elm).data('number');
      if (lot_numbers.indexOf(number) >= 0 || number == 0) {
        $(elm).addClass('hit');
      }
    })
  });
</script>
