<p id="notice"><%= notice %></p>

<h1>ゲーム一覧</h1>

<table class="table table-bordered games-admin-table">
  <thead>
    <tr>
      <th>名前</th>
      <th>開始時刻</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td width="210px"><%= l(game.start_time, format: :middle) %></td>
        <td width="100px"><%= link_to '抽選画面', [:admin, game], class: 'btn btn-primary center-block' %></td>
        <td width="70px"><%= link_to '編集', edit_admin_game_path(game), class: 'btn btn-default center-block' %></td>
        <td width="70px"><%= link_to '削除', [:admin, game], class: 'btn btn-danger center-block', method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ゲームを作成する', new_admin_game_path, class: 'btn btn-default center-block', style: 'width: 200px;' %>
